<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.axelfriberg.foodie" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddRecipeActivity"
            android:label="@string/title_activity_recipe"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.axelfriberg.foodie.MainActivity" />
        </activity>
        <activity
            android:name=".ViewRecipeActivity"
            android:label="@string/title_activity_view_recipe"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.axelfriberg.foodie.MainActivity" />
        </activity>
        <activity
            android:name=".EditRecipeActivity"
            android:label="@string/title_activity_edit_recipe"
            android:parentActivityName="com.axelfriberg.foodie.ViewRecipeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.axelfriberg.foodie.ViewRecipeActivity" />
        </activity>
    </application>

</manifest>
